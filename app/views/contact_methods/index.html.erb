<%= render "layouts/view_header", resource: @contact_methods.first %>

<table class="table table-hover table-curved table-condensed">
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
      <th>Field</th>
      <th>Enabled</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @contact_methods.each do |contact_method| %>
      <tr>
        <td><span class="<%= contact_method.icon_class %>"></span></td>
        <td><%= contact_method.name %></td>
        <td><%= contact_method.field %></td>
        <td><%= yes_no(contact_method.enabled) %></td>
        <td><%= edit_button(contact_method) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
