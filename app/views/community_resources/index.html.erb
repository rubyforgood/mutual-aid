<%= render "layouts/view_header", resource: @community_resources.first %>

<div class="section-detail">
  <table class="table table-hover table-curved table-condensed">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Tags</th>
      <th>Organization</th>
      <th>Location</th>
      <th>Published?</th>
      <th>Approved</th>
      <th>Edit</th>
    </tr>
    </thead>
    <tbody>
    <% @community_resources.each do |community_resource| %>
      <tr>
        <td>
          <strong><%= community_resource.name %></strong>
        </td>
        <td>
          <strong><%= community_resource.description&.truncate(20) %></strong>
        </td>
        <td>
          <%= " | " + community_resource.all_tags_to_s + " | " if community_resource.all_tags_list.any? %>
        </td>
        <td><%= community_resource.organization&.name %></td>
        <td>
          <%= community_resource.phone %> <%= community_resource.service_area&.name %>
        </td>
        <td class="has-text-centered"><%= yes_no(community_resource.published?) %></td>
        <td class="has-text-centered"><%= yes_no(community_resource.is_approved) %></td>
        <td><%= edit_button(community_resource) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br><br>
<%= link_to "Admin home", admin_dashboard_path %>
